image{
  width: 100%;
  height: 100%;
}

video{
  width: 100%;
  height: 100%;
}

/* 标题 */
.title{
  width: 750rpx;
  box-sizing: border-box;
  padding: 30rpx 0 20rpx 20rpx;

  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 30rpx;
}

/* 基本信息 */
.item{
  width: 710rpx;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
  padding-left: 40rpx;
}

.left{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 20rpx 0;
}
.rights{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 26rpx;
  line-height: 26rpx;
  color: rgba(0, 0, 0, 0.8);
}

/* 图标 */
.icon{
  width: 30rpx;
  height: 30rpx;
  margin-top: -12rpx;
}
/* 文字 */
.field {
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  color: rgba(0, 0, 0, 0.8);
}

.star-container{
  width: 180rpx;
  height: 24rpx;
  position: relative;
}

.star, .white-star{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
}

/* .star.active{
  width: 36rpx;
} */

.star > image, .white-star > image{
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
  float: left;
}

.arrow{
  width: 20rpx;
  height: 20rpx;
  padding: 0 0 0 20rpx;
  line-height: 20rpx;
}

.right > text{
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
}



/* 效果图 */
.middle{
  width: 750rpx;
  border-top: 4rpx solid #ededed;
}

.middle .item{
  width: 710rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
  padding-left: 40rpx;
}

swiper{
  width: 100%;
  height: 300rpx; 
  box-sizing: border-box;
  padding: 0 20rpx;
}

/* 审批意见 */
.opinion{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding:30rpx 20rpx 30rpx 60rpx;

  display: flex;
  justify-content: space-between;

  font-size: 26rpx;
  line-height: 26rpx;
  color: rgba(0, 0, 0, 0.9);
}

.opinion > text:last-child{
  color: rgba(0, 0, 0, 0.6);
}


/* 审批历史 */
.history{
  width: 750rpx;
  box-sizing: border-box;
  border-top: 4rpx solid #ededed;
  padding: 0 0 120rpx 0; 
}
/* .history .title{
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
} */
.content{
  padding: 20rpx;
}

.content-item{
  display: flex;
  justify-content: space-between;
  padding:10rpx  40rpx;
}

.history-item{
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 60rpx;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 左侧用户信息 */
.user{
  display: flex;
  justify-content: flex-start;
}

.circle{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #00b0f0; 
  font-size:30rpx;
  color: #ffffff; 
  line-height:80rpx;
  text-align:center;
  position: relative;
}

.circle_no{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  font-size:30rpx;
  color: #ffffff; 
  line-height:80rpx;
  text-align:center;
  position: relative;
}

.vertical-line{
  width: 8rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.1);

  position: absolute;
  top: -50rpx;
  left: 36rpx;
}

.approve-info{
  box-sizing: border-box;
  padding-left: 20rpx;
}

.name{
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 28rpx;
}

.status{
  box-sizing: border-box;
  padding-top: 20rpx;

  color: #53b90f;
  font-size: 26rpx;
  line-height: 26rpx;
}

.status.reject{
  color: #AF081B;
}

/* 右侧时间和理由 */
.reason{
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;

  color: rgba(0, 0, 0, 0.8);
  font-size: 26rpx;
  line-height: 26rpx;
}

.reason-detail{
  box-sizing: border-box;
  padding-top: 20rpx;
}


/* 按钮组 */
.btns{
  width: 750rpx;
  box-sizing: border-box;
  border-top: 4rpx solid #ededed;
  padding: 30rpx 0rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}

.btns button{
  height: 60rpx;
  width: 164rpx;
  font-size: 26rpx;
  color: #ffffff;
  margin: 0 16rpx;
  padding: 0;
}

/* 按钮颜色 */
.btn-green{
  background-color:#1AD473;
  opacity: 1; 
}

.btn-orange{
  background-color: #F49110;
  opacity: 1;
}

/* 审批意见 输入框 */
.mask{
  background-color: rgba(0, 0, 0, 0.6);

  display: flex;
  justify-content: center;
  align-items: center;

  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 11;
}

.examine-model{
  width: 500rpx;
  height: 300rpx;
  border-radius: 10rpx;
  background-color: #ededed;
}

.examine-model-title{
  width: 100%;
  height: 70rpx;

  color: rgba(0, 0, 0, 0.9);
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
}

.examine-model-input{
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
  padding: 0 30rpx 30rpx;
}

textarea{
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
  background-color: #ffffff;

  color: rgba(0, 0, 0, 0.6);
}

.examine-model-btns{
  width: 100%;
  height: 70rpx;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);

  display: flex;
  align-items: center;

  position: relative;
}

.examine-model-btns > view{
  width: 50%;
  height: 100%;

  color: #00b0f0;
  font-size: 26rpx;
  line-height: 70rpx;
  text-align: center;
}

.examine-model-btns > .short-line{
  width: 0;
  height: 40rpx;
  box-sizing: border-box;
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);

  position: absolute;
  top: 15rpx;
  left: 50%;
}

.field-content {
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  color: rgba(0, 0, 0, 0.8);
}

.advert-content{
  width: 100%;
  height: 200rpx; 
  box-sizing: border-box;
  padding: 0 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

textarea {
  width: 100%;
  height: 300rpx;
  border: 1rpx solid black;
}

.textarea-item{
  width: 100%;
  padding: 10rpx 0 0 0;
}

.content-item-1{
  padding: 20rpx 40rpx;
}
.station-item{
  border-top:4rpx solid #ededed;
}

.search {
  height: 60rpx;
  border: 1rpx solid black; 
  border-radius: 5rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  background: #fff;
  /* border: 2rpx solid #398dbb; */
}

.input-box{
  width: 60%;
}

.content-item-title{
  line-height: 60rpx;
}

.result {
  width: 750rpx;
  border-top: 4rpx solid #ededed;
  /* padding-bottom: 160rpx; */
  padding-bottom: 40rpx;
}

/* 照片 */
.photo-list {
  width: 750rpx;
  box-sizing: border-box;
  padding: 20rpx;
  overflow: hidden;
}

.photo {
  width: 350rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
  float: left;
  position: relative;
}

.photo:nth-child(odd) {
  margin-right: 10rpx;
}

.cover{
	position: absolute;
	width: 94%;
	left: 0;
	bottom: 0;
	height: 50rpx;
	align-items: center;
	color: #fff;
	padding:0 10rpx;
	background: rgba(10,10,10,0.5);
}

.input-explain {
  width: 750rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.btn-orange {
  background-color: #f49110;
  opacity: 1;
}
