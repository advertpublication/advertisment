	<block wx:if="{{item.publType == '0'}}">
		<view class="item">
			<view class="left">
				<view class="icon">
					<image class='images' src="../../../images/icon5.png"></image>
				</view>
				<view class="field">
					<text>{{item.properystation}}</text>
				</view>
			</view>
		</view>
		<view class="item">
			<view class="left">
				<view class="icon">
					<image class='images' src="../../../images/icon5.png"></image>
				</view>
				<view class="field">
					<text>{{item.medialocation}}</text>
				</view>
			</view>
			<block wx:if="{{item.cmMediaImgList.length>0}}">
				<view class="rights" bindtap='issueContent'>
					<view>
						<text>点位图</text>
					</view>
					<view class="arrow">
						<image src="../../../images/arrow.png"></image>
					</view>
				</view>
			</block>
		</view>
