	<!-- 广告内容 -->
	<block wx:if="{{item.advertisingheadlines != null&&item.advertisingheadlines !=''}}">
		<view class="item">
			<view class="left">
				<view class="icon">
					<image class='images' src="../../../images/bz.png"></image>
				</view>
