page{
  width: 100%;
  height: 100%;
  color: #333333;
  font-size: 30rpx;
  box-sizing: border-box;
  padding-top: 248rpx;
  font-family: Arial, Helvetica, sans-serif;
  background:url("https://ad.12306.cn/app/res/upload/image/backgroud_imag.png");
  background-size: cover; 
  /* background-color: rgb(226,251,248) */
}
/* 头部 */

.header{
width: 100%;
height: 60%;
color: #fff;
font-size: 48rpx;
font-family: Arial, Helvetica, sans-serif;
font-weight: regular;
 margin-bottom:240rpx; 
}

.title{
  display: flex;
  justify-content:center;
  font-size: 40rpx;
}
.im{
  width: 100%;
  height: 380rpx;
  display: flex;
  justify-content:center;
}
.myImage{
  width: 70%;
}

/* 表单 */
input{
  width: 100%;
  height: 100%;
}

form image{
width: 40rpx;
height: 36rpx;
align-self: center;
margin-left: 20rpx;
margin-right: 30rpx;
}

.user{
  display: flex;
  width: 590rpx;
  height: 90rpx;
  font-size: 30rpx;
  color: #999;
  background: #f0f0f0;
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
  /* border: 2rpx solid gray; */
  flex-direction: row;
  border-radius: 8rpx;
  margin-bottom: 34rpx;
}



form{
  width: 590rpx;
  margin:0 auto;
  height: 50%;
  display: flex;
  justify-content:center;

}

.box{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.inner{
  display: flex;
  width: 70%;
  height: 70rpx;
  background: #fff;
  border: 2rpx solid gray;
  border-radius: 10rpx; 
  margin-top: 10rpx;
}


.box button{
 margin-top: 10rpx;
 font-size: 28rpx;
}
.butt{
  background-color: blue;
  color: #ffffff;
}

.login{
  width: 100%;
  height: 90rpx;
  margin-top: 350rpx;
  background-color:#006699;
  color: #ffffff;
  border:2rpx solid #fff;
  box-sizing: border-box;}

/* 底部 */
.bottom{
  width: 100%;
  height: 5%;
  margin-top: 18rpx;
  display: flex;
  color: #fff;
  font-size: 28rpx;
  font-weight: regular;
  justify-content:center;
}
