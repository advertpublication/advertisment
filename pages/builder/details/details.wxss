/* 标题 */

.title {
  width: 750rpx;
  box-sizing: border-box;
  padding: 30rpx 0 20rpx 20rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 30rpx;
}

/* 基本信息 */

.item {
  width: 710rpx;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
  padding-left: 40rpx;
}

/* 左侧 */

.left {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 20rpx 0;
}

/* 图标 */

.icon {
  width: 30rpx;
  height: 30rpx;
  margin-top: -12rpx;
}

video {
  width: 100%;
  height: 100%;
}

/* 文字 */

.field {
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  color: rgba(0, 0, 0, 0.8);
}

/* 右侧 */

/* 星星 */

.star-container {
  width: 180rpx;
  height: 24rpx;
  position: relative;
}

.star, .white-star {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
}

.star > image, .white-star > image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
  float: left;
}

/* 箭头 */

.arrow {
  width: 20rpx;
  height: 20rpx;
  padding: 0 0 0 20rpx;
  line-height: 20rpx;
}

/* 文字 */

.right > text {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
}

/* 效果图 */

.middle {
  width: 750rpx;
  border-top: 4rpx solid #ededed;
}

/* 轮播 */

swiper {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx;
}

/* 施工时间 */

.middle-bottom {
  width: 750rpx;
  border-top: 2rpx solid #ededed;
  padding-bottom: 10rpx;
}

.rights {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 26rpx;
  line-height: 26rpx;
  color: rgba(0, 0, 0, 0.8);
}

/* 施工结果 */

.result {
  width: 750rpx;
  border-top: 4rpx solid #ededed;
  padding-bottom: 160rpx;
}

/* 输入框 */

.input-explain {
  width: 750rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}

textarea {
  width: 100%;
  height: 180rpx;
  padding: 10rpx 0 0 0;
  border-top: 1rpx solid #ededed; 
}

/* 照片 */

.photo-list {
  width: 750rpx;
  box-sizing: border-box;
  padding: 20rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #ededed;
}

.photo {
  width: 350rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
  float: left;
  position: relative;
}

.photo:nth-child(odd) {
  margin-right: 10rpx;
}

.add-photo {
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-photo > image {
  width: 50rpx;
  height: 50rpx;
}

.delete-photo {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* 按钮组 */

.btns {
  width: 750rpx;
  box-sizing: border-box;
  border-top: 4rpx solid #ededed;
  padding: 30rpx 0rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}

.btns button {
  height: 60rpx;
  width: 164rpx;
  font-size: 26rpx;
  color: #fff;
  margin: 0 16rpx;
  padding: 0;
}

/* 按钮颜色 */

.btn-green {
  background-color: #1ad473;
  opacity: 1;
}
.btn-orange {
  background-color: #f49110;
  opacity: 1;
}
/* 底部表格样式 */

.table {
  border: 0px solid darkgray;
  padding: 0 20rpx;
  font-size: 26rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
  display:flex;
  align-items:center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #00b0f0;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.marshalling-num {
  border: 1rpx solid;
  width: 80%;
}

.field-content {
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  color: rgba(0, 0, 0, 0.8);
}

.advert-content{
  width: 100%;
  height: 200rpx; 
  box-sizing: border-box;
  padding: 0 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.cover{
	position: absolute;
	width: 94%;
	left: 0;
	bottom: 0;
	height: 50rpx;
	align-items: center;
	color: #fff;
	padding:0 10rpx;
	background: rgba(10,10,10,0.5);
}