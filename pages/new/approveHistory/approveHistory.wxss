/* 顶部提示 */
.tips{
  padding: 0 0 20rpx 20rpx;

  font-size: 26rpx;
  color: #ed7d31;
  line-height: 26rpx;
}

/* 顶部按钮 */
.btns{
  width: 750rpx;
  height: 85rpx;
  border-top: 4rpx solid #ededed;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
}

.btns > view{
  float: left;
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 21rpx;

  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.btns > view > image{
  width: 48rpx;
  height: 48rpx;
}

.btns > view > text{
  padding: 10rpx 0 0 10rpx;

  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.8);
  line-height: 28rpx;
}

.btns > .line{
  width: 0;
  height: 46rpx;
  border-left: 1px solid #ededed;
  position: absolute;
  top: 21rpx;
  left: 50%;
}

.picker{
  width: 50%;
  height: 100%;

  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
}

/* 列表 */
.list{
  width: 750rpx;
}

/* 列表项 */
.item{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: flex-start;
  align-items: center;

  position: relative;
}

/* 列表图片 */
.image{
  width: 174rpx;
  height: 140rpx;
}

/* 列表信息 */
.info{
  height: 140rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.info > text{
  display: inline-block;
  padding-bottom: 12rpx;

  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 26rpx;
}

.info > .station{
  padding-bottom: 15rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 30rpx;
}

.date{
  position: absolute;
  top: 30rpx;
  right: 20rpx;
}

.date > text{
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 26rpx;
}
