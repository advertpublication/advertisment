page{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #333333;
}

/* 按钮组 */
.btns{
  width: 100%;
  height: 15%;
  box-sizing: border-box;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btns button{
  width: 40%;
  height: 80rpx;
  padding: 0;
  margin: 0;
  line-height: 80rpx;
  font-size: 26rpx;
}

/* 标题 */
.title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #eeeeee;
}

.title text{
  margin-left: 20rpx;
  padding-left: 10rpx;
  border-left: 5rpx solid blue;
}

/* 内容 */
.content{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.item{
  width: 30%;
  height: 80rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  background-color: #eeeeee;
  text-align: center;
  line-height: 80rpx
}

.wider{
  width: 48%;
}

.active{
  background-color: azure;
}