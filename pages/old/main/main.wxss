/**index.wxss**/
.top-info{
  width: 100%;
  height: 360rpx;
  margin-bottom: 20rpx;
  background: #f0f0f0;
  overflow: hidden;
}

.avatar{
  margin:100rpx auto 20rpx;
  width:150rpx;
  height: 150rpx;
  border-radius:50%;
  background: #398dbb;
  text-align:center;
  line-height:150rpx;

}

.avatar .icon-user{
  font-size:80rpx;
  color:#fff; 
}
.phone{
  text-align: center;
  letter-spacing: 2rpx;
  padding: 4rpx;
 
}

.my-info>view{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.my-info .iconfont{
  margin-right: 20rpx;
}

.advert-picture{
  width: 100%;
  height: 360rpx;
  line-height: 360rpx;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx;
}

.exit{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  text-align:center;
  line-height:120rpx;
  height:120rpx;
  border-top:1rpx solid #cfcfcf;

}


