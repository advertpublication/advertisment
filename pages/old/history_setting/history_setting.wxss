page{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #333333;
}

/* 条件 */
.condition{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #eeeeee;
}

.date, .module-type{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
}

.picker{
  padding: 0 20rpx;
}

/* 表格 */
.table{
  width: 100%;
  padding-top: 20rpx;
}

.title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.tr{
  width: 100%;
  height: 80rpx;
}

.thead .tr{
  background-color: blue;
}

.tbody .tr:nth-child(odd){
  background-color: aquamarine;
}

.tbody .tr:nth-child(even){
  background-color: #aaaaaa;
}

.td{
  width: 30%;
  height: 100%;
  float: left;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
}

.wide40{
  width: 40%;
}

.node .td{
  width: 25%;
}

.node .td.wide20{
  width: 20%;
}

.node .td.wide30{
  width: 30%;
}