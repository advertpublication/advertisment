page{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #333333;
}

/* 按钮组 */
.btns{
  width: 100%;
  height: 15%;
  box-sizing: border-box;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btns button{
  width: 40%;
  height: 80rpx;
  padding: 0;
  margin: 0;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #ffffff;
}

/* 按钮颜色 */
.btn-green{
  background-color: green;
}

.btn-blue{
  background-color: blue;
}

.btn-grey{
  background-color: grey;
}

