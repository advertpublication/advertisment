/* 表格 */
.table{
  width: 100%;
  height: 85%;
  background-color: #eeeeee;
}

.tr{
  width: 100%;
  height: 100rpx;
}

.thead .tr{
  background-color: blue;
}

.tbody .tr:nth-child(odd){
  background-color: #2d799749;
}

.tbody .tr:nth-child(even){
  background-color: #aaaaaa;
}

.td{
  width: 30%;
  height: 100%;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  /* line-height: 100rpx; */
  text-align: center;
  color: #ffffff;
}

.td:last-child{
  width: 40%;
}

