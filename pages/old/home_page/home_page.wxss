page{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #333333;
}

/* header */
.header{
  width: 100%;
  height: 300rpx;
  position: relative;
}

.icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.icon image{
  width: 100%;
  height: 100%;
}

/* 顶部图片 */
.picture{
  width: 100%;
  height: 100%;
  vertical-align: middle;
  background-color: #eeeeee;
}

/* 按钮容器 */
.btns{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

/* 各按钮 */
.btn{
  width: 170rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 彩色按钮 */
.color-btn{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}

.yellow-btn{
  background-color: yellow;
}

.green-btn{
  background-color: green;
}

.blue-btn{
  background-color: blue;
}

/* 标题 */
.title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #eeeeee;
}

.title text{
  margin-left: 20rpx;
  padding-left: 10rpx;
  border-left: 5rpx solid blue;
}

/* 未受理列表 */
.list{
  width: 100%;
}

.item{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx;
  border-bottom: 1px dashed #000000;
  /* background-color: #93dd1b; */
  display: flex;
  align-items: center;
  position: relative;
}

.image{
  width: 160rpx;
  height: 100rpx;
  background-color: #eeeeee;
  vertical-align: middle;
}

.info{
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.info text{
  height: 40rpx;
  line-height: 40rpx;
}

.status{
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
}

/* 状态字体颜色 */
.text-red{
  color: red;
}

.text-green{
  color: green;
}

.text-blue{
  color: blue;
}